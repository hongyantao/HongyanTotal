<?xml version="1.0" encoding="utf-8"?>
<com.hongyan.hyutil.widget.CustomToolBar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ctb_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:left_btn_visible="true"
    app:title_text="支付详情"
    app:title_visible="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_dp_200"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pay_dao_ji_shi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="支付剩余时间:30:00" />
                <!-- ¥￥ -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥ " />

                    <TextView
                        android:id="@+id/pay_tv_rmb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9999.99"
                        android:textSize="@dimen/value_sp_22" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="商品简介" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/value_dp_10"
                    android:layout_marginTop="@dimen/value_dp_10"
                    android:layout_marginRight="@dimen/value_dp_10"
                    android:background="@color/color_gray" />

                <RelativeLayout
                    android:layout_marginTop="@dimen/value_dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/value_dp_10"
                    android:layout_marginRight="@dimen/value_dp_10"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/pay_alibaba_iv"
                        android:layout_width="@dimen/value_dp_50"
                        android:layout_height="@dimen/value_dp_50"
                        android:src="@drawable/ic_pay_zfb_logo" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/value_dp_13"
                        android:layout_marginLeft="@dimen/value_dp_13"
                        android:layout_toRightOf="@+id/pay_alibaba_iv"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="支付宝"
                                android:textSize="@dimen/value_sp_16" />

                            <ImageView
                                android:layout_width="@dimen/value_dp_30"
                                android:layout_height="@dimen/value_dp_20"
                                android:layout_marginStart="@dimen/value_dp_5"
                                android:layout_marginLeft="@dimen/value_dp_5"
                                android:src="@drawable/ic_pay_zfb_tj" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="数亿用户都在用,安全可托付"
                            android:textSize="@dimen/value_sp_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/value_dp_60"
                        android:layout_height="@dimen/value_dp_40"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/pay_check_iv_al"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:button="@drawable/bg_checkbox_pay"
                            android:checked="false"
                            android:clickable="true"
                            android:focusable="true"
                            android:scaleX="1"
                            android:scaleY="1" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/value_dp_10"
                    android:layout_marginTop="@dimen/value_dp_10"
                    android:layout_marginRight="@dimen/value_dp_10"
                    android:background="@color/color_gray" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/value_dp_10"
                    android:layout_marginTop="@dimen/value_dp_10"
                    android:layout_marginRight="@dimen/value_dp_10"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/pay_wx_iv"
                        android:layout_width="@dimen/value_dp_50"
                        android:layout_height="@dimen/value_dp_50"
                        android:src="@drawable/ic_pay_wx_logo" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/value_dp_13"
                        android:layout_marginLeft="@dimen/value_dp_13"
                        android:layout_toRightOf="@+id/pay_wx_iv"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="微信"
                                android:textSize="@dimen/value_sp_16" />

                            <ImageView
                                android:layout_width="@dimen/value_dp_30"
                                android:layout_height="@dimen/value_dp_20"
                                android:layout_marginLeft="@dimen/value_dp_5"
                                android:src="@drawable/ic_pay_wx_tj" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="数亿用户都在用,安全可托付"
                            android:textSize="@dimen/value_sp_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/value_dp_60"
                        android:layout_height="@dimen/value_dp_40"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/pay_check_iv_wx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/bg_checkbox_pay"
                            android:checked="false"
                            android:clickable="true"
                            android:focusable="true"
                            android:scaleX="1"
                            android:scaleY="1" />
                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/value_dp_10"
                    android:layout_marginTop="@dimen/value_dp_10"
                    android:layout_marginRight="@dimen/value_dp_10"
                    android:background="@color/color_gray" />

            </LinearLayout>

            <TextView
                android:id="@+id/pay_tv_deposit_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_dp_40"
                android:layout_marginLeft="@dimen/value_dp_13"
                android:layout_marginRight="@dimen/value_dp_13"
                android:layout_marginBottom="@dimen/value_dp_20"
                android:background="@color/color_blue"
                android:gravity="center"
                android:text="确认支付"
                android:textColor="@color/color_white" />
        </LinearLayout>
    </LinearLayout>
</com.hongyan.hyutil.widget.CustomToolBar>