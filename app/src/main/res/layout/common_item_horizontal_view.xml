<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_dp_50"
        android:background="@color/color_white"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/value_dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNotNull"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/color_red"
                    android:textSize="@dimen/value_sp_14"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="证件类型"
                    android:textColor="@color/app_color_grey"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/value_dp_5"
                    android:layout_marginTop="@dimen/value_dp_5"
                    android:layout_marginEnd="@dimen/value_dp_5"
                    android:layout_marginBottom="@dimen/value_dp_5"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:hint=""
                    android:maxLines="1"
                    android:textColor="@color/app_color_grey"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/etContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/value_dp_5"
                    android:layout_marginTop="@dimen/value_dp_3"
                    android:layout_marginEnd="@dimen/value_dp_5"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="right|center_vertical"
                    android:hint=""
                    android:inputType="text"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/app_color_grey"
                    android:textSize="@dimen/value_sp_12"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_right_Img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/iv_right_Img"
                android:layout_width="@dimen/value_dp_24"
                android:layout_height="@dimen/value_dp_24"
                android:layout_marginEnd="@dimen/value_dp_5" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_dp_1"
        android:layout_below="@+id/ll"
        android:background="@color/color_gray"
        android:visibility="gone" />

</RelativeLayout>